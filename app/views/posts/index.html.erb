<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% if @posts.empty? %>
  <h5>글이 없습니다.</h5>
<%else%>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Keyword</th>
        <th>Provider</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td span="3"><%= post.title %></td>
          <td><%= post.url %></td>
          <td><%= post.keyword %></td>
          <td><%= post.provider %></td>
          <td><%= link_to 'Show', post %></td>
          <!-- <td><%= link_to 'Edit', edit_post_path(post) %></td> -->
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>

